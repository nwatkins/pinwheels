= form_for @pinwheel do |f|
  - if @pinwheel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pinwheel.errors.count, "error")} prohibited this pinwheel from being saved:"
      %ul
        - @pinwheel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
